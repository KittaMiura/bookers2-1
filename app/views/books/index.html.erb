<div class="container mt-3">
  <div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">

      <h2>User info</h2>

      <table class="table">
            <tbody></tbody>
      </table>

      <div class="row">

      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "book_title" %>
      </div>
      <div class="form-group">
            <p>Opinion</p>
            <%= f.text_field :opinion, class: "book_opinion" %>
      </div>
      <%= f.submit 'Create Book', class: "btn btn-success" %>

      <% end %>
      
</div>

    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
        <th>Title</th>
        <th>Body</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
         <tbody>
      <tr>
      <td><%= image_tag 'no_image.jpg' %></td>
      <td>
        <%= link_to book do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.opinion %></td>
    </tbody>
    <% end %>
      </table>
    </div>
  </div>
</div>

