<div class="container mt-3">
  <div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">

      <h2>User info</h2>

      <table class="table">
            <tbody></tbody>
      </table>

      <div class="row">

      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "book_title" %>
      </div>
      <div class="form-group">
            <p>Opinion</p>
            <%= f.text_field :opinion, class: "book_opinion" %>
      </div>
      <%= f.submit 'Create Book', class: "btn btn-success" %>

      <% end %>
      
</div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
      <table>
         <tbody>
      <tr>
      <td><%= link_to user_path do %>
        <%= image_tag @book.user.get_profile_image(100,100) %><br>
        <%= @book.user.name %>
        <% end %></td>
      <td>
        <%= link_to book_path do %>
          <%= @book.title %>
          <% end %>
      </td>
      <td><%= @book.opinion %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_36035" %></td>
        <td><%= link_to "Destrroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger destroy_book_36028" %></td>
      <% end %>
    </tbody>
      </table>
    </div>
  </div>
</div>